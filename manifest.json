{
    "manifest_version": 2,
    "name": "MaLink Detector",
    "version": "1.0",
    "description": "Detect Malicious Link",
    "browser_action": {
      "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"

    }

  }
  
